{
    "extends": "standard",
    "plugins": [
        "react",
        "jest",
        "promise",
        "standard",
        "html"
    ],
    "env": {
        "jest/globals": true,
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": ["error", "always"],
        "indent": [
            "error",
            4
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "generator-star-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "no-param-reassign": [
            2,
            {
                "props": false
            }
        ],
        "max-len": [
            2,
            150,
            4,
            {
                "ignoreUrls": true,
                "ignoreComments": false,
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js"
            }
        }
    },
    "globals": {
        "window": true,
        "document": true,
        "location": true,
        "Owl": true,
        "LXAnalytics": true
    }
}